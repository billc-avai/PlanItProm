<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/dialog_container_background"
        android:paddingTop="@dimen/dialog_container_padding_top"
        android:paddingLeft="@dimen/dialog_container_padding_left"
        android:paddingRight="@dimen/dialog_container_padding_right"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/alert_dialog_new_budget_padding"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:background="@color/alert_dialog_info_background"
            android:layout_margin="30dp"
            >

        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">

            <ImageView
                    android:id="@+id/alert_dialog_new_budget_close_image"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/close"/>
        </RelativeLayout>

        <com.sevendesign.planitprom.ui.customviews.CustomFontTextView
                style="@style/AppBaseTheme.TextView.Title.InvertColor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/title_padding_left"
                android:layout_marginTop="@dimen/alert_dialog_new_budget_fields_margin_top"
                android:text="@string/alert_dialog_new_budget_name_title"
                android:textStyle="bold"/>

        <com.sevendesign.planitprom.ui.customviews.CustomFontEditText
                style="@style/AppBaseTheme.EditText.InvertColor"
                android:id="@+id/alert_dialog_new_budget_name_edit"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/alert_dialog_new_budget_fields_margin_top"
                />

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/alert_dialog_new_budget_button_margin_top">

            <com.sevendesign.planitprom.ui.customviews.CustomFontButton
                    style="@style/AppBaseTheme.Button.Dark"
                    android:id="@+id/alert_dialog_new_budget_done_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/alert_dialog_new_budget_done_title"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>