<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <com.sevendesign.planitprom.ui.customviews.CustomFontTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/AppBaseTheme.ActionBarTitle"
            />

        <com.sevendesign.planitprom.ui.customviews.CustomFontButton 
            	android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/action_bar_button_padding"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/settings_actionbar_save_text"
                android:background="@android:color/transparent"
                style="@style/AppBaseTheme.ActionBarTitle.Small"/>
</RelativeLayout>

