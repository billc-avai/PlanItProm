<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">

        <com.sevendesign.planitprom.ui.customviews.CustomFontTextView
                android:id="@+id/item_budget_counter_item_title_text"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/item_budget_counter_item_title"
                  android:textColor="@color/item_budget_counter_item_title"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"/>

        <com.sevendesign.planitprom.ui.customviews.CustomFontTextView
                android:id="@+id/item_budget_counter_item_value_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/item_budget_counter_item_value"
                android:textColor="@color/item_budget_counter_item_value"
                android:layout_marginLeft="5dp"/>

</LinearLayout>