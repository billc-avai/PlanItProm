<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/dialog_container_background"
        android:paddingTop="@dimen/dialog_container_padding_top"
        android:paddingLeft="@dimen/dialog_container_padding_left"
        android:paddingRight="@dimen/dialog_container_padding_right"
        >

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/alert_dialog_info_padding"
        android:background="@color/alert_dialog_info_background"
        >

    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" >

        <com.sevendesign.planitprom.ui.customviews.CustomFontTextView
                style="@style/AppBaseTheme.TextView.Title.InvertColor"
                android:id="@+id/alert_dialog_info_title_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

        <ImageView
                android:id="@+id/alert_dialog_info_close_image"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/close"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alert_dialog_info_message_margin_top"
            android:overScrollMode="never">

    <com.sevendesign.planitprom.ui.customviews.CustomFontTextView
            style="@style/AppBaseTheme.TextView.Message.InvertColor"
            android:id="@+id/alert_dialog_info_message_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

    </ScrollView>

</LinearLayout>
</LinearLayout>